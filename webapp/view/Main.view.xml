<mvc:View controllerName="ui5.challenge.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <Page id="MainPage" showHeader="false">
        <subHeader>
            <OverflowToolbar>
                <Title text="Products" class="sapUiSmallMarginBegin"/>
                <ToolbarSpacer/>
                <SearchField liveChange=".onSearch" width="20%" />
                <Button text="Click me!" press=".onDoSomething"/>
                <Button text="Go to detail" press=".onNavigateToDetail"/>
            </OverflowToolbar>
        </subHeader>
        <List items="{mainModel>/}" showHeader="false" growing="true" growingThreshold="6" growingScrollToLoad="false">
            <StandardListItem title="{mainModel>Name}" description="{mainModel>ProductId}" icon="{mainModel>ProductPicUrl}" iconDensityAware="false" iconInset="false" />
        </List>
    </Page>
</mvc:View>
